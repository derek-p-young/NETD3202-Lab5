@model Lab5.Models.Expense

@{
    ViewData["Title"] = "Edit";
}

<!-- Main content title -->
<h1>Edit Expense</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Form to edit all attributes of an expense -->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <!-- Form group to edit date field -->
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <!-- Form group to edit description field -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!-- Form group to edit dollar amount field -->
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <!-- Form group to edit expense category field -->
            <div class="form-group">
                <label asp-for="ExpenseCategoryID" class="control-label"></label>
                <select asp-for="ExpenseCategoryID" class="form-control" asp-items="ViewBag.ExpenseCategoryID"></select>
                <span asp-validation-for="ExpenseCategoryID" class="text-danger"></span>
            </div>
            <!-- Form group to edit payment method field -->
            <div class="form-group">
                <label asp-for="PaymentMethodID" class="control-label"></label>
                <select asp-for="PaymentMethodID" class="form-control" asp-items="ViewBag.PaymentMethodID"></select>
                <span asp-validation-for="PaymentMethodID" class="text-danger"></span>
            </div>
            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Return to Index button -->
<div>
    <a class="btn btn-info text-light" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
