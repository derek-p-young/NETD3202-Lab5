@model Lab5.Models.Expense

@{
    ViewData["Title"] = "Delete";
}

<!-- Main content title -->
<h1>Delete Expense</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <!-- Description list to display details of the item to be deleted -->
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseCategory.CategoryName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod.PaymentMethodName)
        </dd class>
    </dl>
    
    <!-- Delete button -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />

        <!-- Back to index button-->
        <a class="btn btn-info" asp-action="Index">Back to List</a>
    </form>
</div>
